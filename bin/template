#!/usr/bin/env bash

usage() {
	printf "%s\n\n" "Some usage message"
	exit 1
}

greet() {
	printf "%s\n\n" "Hello, World"
}

main() {

	if [ "$(whoami)" != "root" ]; then
		printf "%s\n" "This script must be run as root"
		exit 1
	fi

	if [ $# -lt 1 ]; then
		usage
	fi

	case $1 in
		"greet")
			greet
			;;
		*)
			usage
			;;
	esac

}

main $@
